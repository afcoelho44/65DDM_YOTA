<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#E6E6E6" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#00FFFFFF" />
            <corners android:radius="50dp" />
            <padding android:left="-7dp" android:top="-7dp" android:right="7dp" android:bottom="7dp" />
        </shape>
        <shadow
            android:shadowDx="-7"
            android:shadowDy="-7"
            android:shadowRadius="8"
            android:shadowColor="#A8FFFFFF" />
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="#00FFFFFF" />
            <corners android:radius="50dp" />
            <padding android:left="-2dp" android:top="-2dp" android:right="2dp" android:bottom="2dp" />
        </shape>
        <shadow
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="7"
            android:shadowColor="#08000000" />
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="#00FFFFFF" />
            <corners android:radius="50dp" />
            <padding android:left="1dp" android:top="1dp" android:right="-1dp" android:bottom="-1dp" />
        </shape>
        <shadow
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="7"
            android:shadowColor="#FFFFFFFF" /> <!-- 100% de transparência branca -->
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="#00FFFFFF" />
            <corners android:radius="50dp" />
            <padding android:left="5dp" android:top="4dp" android:right="-5dp" android:bottom="-4dp" />
        </shape>
        <shadow
            android:shadowDx="5"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:shadowColor="#40000000" /> <!-- 25% de transparência preta -->
    </item>

</layer-list>
